
  <div class="content-ls">
  <%= link_to gravatar_for(comment.user,
    size: Settings.user.gravatar_size_30), comment.user %>
    <span class="username"><%= link_to comment.user.name, comment.user %></span>
    <%= comment.content %>
    <small>
      <div class="text-left">
      <%= time_ago_in_words(comment.created_at) %>
      </div>
      <div class="text-right edit-delete">
        <% if current_user.current_user? comment.user ||
          current_user.current_user?(micropost.user) %>
            <%= link_to t(".edit"), "#" %>
            <%= link_to t(".delete"), [comment.micropost, comment],
              method: :delete, remote: true, class: "delete" %>
        <% end %>
      </div>
    </small>
  </div>


